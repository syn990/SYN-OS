    "height": 30,
    "spacing": 4,

    /* =====================
       LEFT / CENTER / RIGHT
       ===================== */

    "modules-left": [
        "custom/obmenu",
        "wlr/workspaces"
    ],

    "modules-center": [
        "wlr/taskbar"
    ],

    "modules-right": [
        "mpd",
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "keyboard-state",
        "sway/language",
        "battery",
        "battery#bat2",
        "clock",
        "tray",
        "custom/power"
