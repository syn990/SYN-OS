{
    "height": 28,
    "spacing": 6,

    "modules-left": [
        "custom/glyph",
        "wlr/workspaces"
    ],

    "modules-center": [
        "wlr/window"
    ],

    "modules-right": [
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "custom/disk",
        "battery",
        "clock",
        "custom/power"
    ],

    /* =====================
       CUSTOM MODULES
       ===================== */

    "custom/glyph": {
        "return-type": "json",
        "format": "{}",
        "exec": "$HOME/.config/waybar/glyph-rotator.sh",
        "interval": 1,
        "tooltip": false,
        "on-click": "wmenu-run -N '#000000' -n '#ffffff' -S '#400101' -s '#ffffff' -M '#260101' -m '#ffffff'"
    },

    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "systemctl poweroff",
            "reboot": "systemctl reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },

    /* =====================
       CORE MODULE SETTINGS
       ===================== */

    "wlr/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "üÉÅ",
            "2": "‚Ñê",
            "3": "‚Ñï",
            "4": "‚åò",
            "default": "‚Ä¢"
        }
    },

    "wlr/window": {
        "max-length": 60,
        "separate-outputs": true
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "Ôö©",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-middle": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5
    },

    "network": {
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "Û∞àÄ {ipaddr}",
        "format-disconnected": "Û∞§Æ",
        "tooltip-format": "{ifname} {ipaddr}/{cidr}\n‚Üì {bandwidthDownBits} ‚Üë {bandwidthUpBits}"
    },

    "cpu": {
        "interval": 2,
        "format": "{usage}% Ôãõ",
        "tooltip": false,
        "on-click": "foot -e btop"
    },

    "memory": {
        "interval": 5,
        "format": "{percentage}% ÔÉâ",
        "tooltip": false,
        "on-click": "foot -e btop"
    },

    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C Ôãâ",
        "interval": 5,
        "tooltip": false
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% ÔÜÖ",
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5%-"
    },

    "custom/disk": {
        "interval": 30,
        "format": "ÔÇ† {}",
        "exec": "df -h --output=used,size / | awk 'NR==2{print $1\"/\"$2}'",
        "tooltip": false,
        "on-click": "foot -e btop"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    }
}
